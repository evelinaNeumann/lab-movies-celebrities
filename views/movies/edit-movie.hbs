<h2>Edit Movie</h2>
<form action="/movies/{{movie._id}}" method="POST">
  <label for="title">Title:</label>
  <input type="text" name="title" value="{{movie.title}}">

  <label for="genre">Genre:</label>
  <input type="text" name="genre" value="{{movie.genre}}">

  <label for="plot">Plot:</label>
  <textarea name="plot">{{movie.plot}}</textarea>

  <label for="cast">Cast:</label>
  <select name="cast" multiple>
    {{#each celebrities}}
    <option value="{{this._id}}" {{#if movie.cast.includes this._id}}selected{{/if}}>{{this.name}} ({{this.occupation}})</option>
    {{/each}}
  </select>

  <button type="submit">Save Changes</button>
</form>